<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>users</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>
<body>
<div>
    <a href="/create" class="btn btn-primary">Create</a>
</div>
<table class="table">
    <thead>
    <tr>
        <th scope="col">STT</th>
        <th scope="col">name</th>
        <th scope="col">address</th>
        <th scope="col">email</th>
        <th scope="col">avatar</th>
        <th scope="col" colspan="3">Action</th>
    </tr>
    </thead>
    <tbody>
    <% for(let i = 0; i <users.length;i++){%>
    <tr>
        <td scope="row"><%=i+1%></td>
        <td><%= users[i].name%></td>
        <td><%= users[i].address%></td>
        <td><%= users[i].email%></td>
        <td><img src="/<%= users[i].avatar%>" width="100px" height="100px" alt=""></td>
        <td><a href="/detail/<%=users[i].id%>" class="btn btn-primary">detail</a></td>
        <td><a href="/update/<%=users[i].id%>" class="btn btn-primary">edit</a></td>
        <td><a href="/delete/<%=users[i].id%>" class="btn btn-danger">delete</a></td>
    </tr>
    <%}%>
    </tbody>
</table>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
</body>
</html>